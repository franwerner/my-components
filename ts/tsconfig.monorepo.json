{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
          "ES2020",
          "DOM",
          "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
          "@my-components/*": [
            "../src/*"
          ],
          "my-utilities" : ["../../my-utilities/lib/index.ts"],
          "responsive-component" : ["../../responsive-component/lib/index.ts"],
        }
      },
      "include": [
        "../src"
      ]
}